<div class="container1 px-5 py-5">


<div class="card mb-3 px-5" style="max-width: 80%;">
  <div class="row no-gutters">
    <div class="col-md-4">
    <%= link_to image_tag(@movie.movie_picture, style:'width:300px') %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
                        <h4 class="card-title"><%= @movie.title %></h4>
                        <p class="card-text"><p>Director: <%= @movie.director%></p></p>
                        <p class="card-text"><p>Year Of Release: <%= @movie.release_date%></p>
                        <p class="card-text"><p>Synopsis: <%= @movie.synopsis%></p></p>
                        <p> <%= link_to 'Back', movies_path %> ||
                        <% if current_user.id == @movie.user.id %>
                          <%= link_to 'Edit', edit_movie_path(@movie) %>
                        <% else %>
                        <% end %> </p>
                    </div>
                    <div class="section-comments">
                    <h3 class="share">Give your opinion on the movie =></h3>
                    <div class="container">
                      <%= form_tag (movie_comments_path(@movie.id)) do %>
            
                        <div class="form-group">
                          <%= text_area_tag 'description', nil, class: "form-control area" %>
                        </div>
                        <div class="submit-comment">
                        <%= submit_tag "Submit!", class: 'btn btn-primary' %>
                      </div>
                      <%end%>
                  
                      <div class="list-comments">
                        <h2>Comments of Movie: </2>
                        <% @comments.each do |comment| %>
                          <p><%= comment.description %></p>
                        <if comment.movie_id == @movie.id %>
                        <% end %>
                      </div>
                    </div>
                  </div>
    </div>

  </div>

</div>

</div>